{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@statistics/*": ["src/statistics/*"],
      "@scorer": ["src/scorer.ts"],
      "@fuzzy": ["src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist/*"]
}
