{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@statistics/*": ["src/statistics/*"],
      "@scorer": ["src/scorer.ts"],
      "@data/*": ["data/*"],
      "@fuzzy": ["src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"]
}
