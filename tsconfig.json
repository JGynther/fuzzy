{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@statistics/*": ["src/statistics/*"],
      "@scorer": ["src/scorer.ts"]
    }
  },
  "include": ["src/**/*.ts"]
}
